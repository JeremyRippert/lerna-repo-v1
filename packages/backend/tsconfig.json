{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": false,
    "target": "es2017"
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
